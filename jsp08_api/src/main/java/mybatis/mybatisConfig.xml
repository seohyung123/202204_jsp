<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 매퍼에서 값을 매핑할때 필드의 값 null허용-->	
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/>
	</settings>
	
	<!-- db접속정보 -->
  	<environments default="development">
    	<environment id="development">
    		<!-- MANAGED : 컨테이너가 트랙잭션을 관리 -->
    		<!-- JDBC : commit을 마이바티스 세션에서(소스)에서 관리 -->
      	<transactionManager type="JDBC"/>
      	<!-- UNPOOLED:컨텍션풀을 사용하지 않겠다 -->
      	<dataSource type="POOLED">
        	<property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
        	<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
        	<property name="username" value="hr"/>
        	<property name="password" value="hr"/>
      	</dataSource>
    	</environment>
  	</environments>
  	<!-- 매퍼파일들 매핑 -->
  	<mappers>
  		<mapper resource="mybatis/CovidMapper.xml"/>
  		<mapper resource="mybatis/CountryMapper.xml"/>
  		<mapper resource="mybatis/DustMapper.xml"/>
  	</mappers>
</configuration>
